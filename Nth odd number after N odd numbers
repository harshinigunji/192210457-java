import java.util.Scanner;
public class Pp {
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner input=new Scanner(System.in);
        int n=input.nextInt();
        int[] arr=new int[100];
        int x=1;
        for(int i=1;i<100;i++)
        {
            if(i%2!=0)
            {
                arr[x]=i;
                x++;
            }
        }
        System.out.println(arr[n*2]);
    }
}
Input:
4
Output:
15
